<!-- AWS IAM - Identity and Access Management – Users, Roles, Policies -->


<!-- policy Example of giving access to aws s3 bucket -->

{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::my-example-bucket",
        "arn:aws:s3:::my-example-bucket/*"
      ]
    }
  ]
}


<!-- END -->

<!-- Create a custom JSON policy that allows only s3:ListBucket and test it. -->

{
  "Version": "2012-10-17",
  "Statement": [
  {
    "Effect": "Allow",
    "Action": [
      "s3:ListBucket"
    ],
    "Resource": [
    "arn:aws:s3:::*"
    ]
  }
  ]
}

